{
  "name": "<%=project%>",
  "version": "0.0.0",
  "description": "<%-description%>",
  >> if(license) {
  "license": "<%=license%>",
  >> }
  "repository": "https://github.com/<%=username%>/<%=project%>",
  "author": {
    >> if(authorName) {
    "name": "<%=authorName%>",
    >> }
    >> if(authorEmail) {
    "email": "<%=authorEmail%>",
    >> }
    >> if(authorUrl) {
    "url": "<%=authorUrl%>"
    >> }
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "mocha"
  },
  >> if(cli) {
  "bin": {
    "<%=project%>": "bin.js"
  },
  "preferGlobal": true,
  >> }
  >> if(keywords.length) {
  "keywords": <%-keywordsFormatted%>,
  >> }
  "devDependencies": {
    "chai": "*",
    "mocha": "*"
  },
  "dependencies": <%-dependenciesFormatted%>
}
